<section class="cwr-img-content">
    <div class="container">
    {%- for block in section.blocks -%}
        {% case block.type %}
            {%- when 'image_content' -%}
            <div class="cwr-img-content__left">
                <div class="cwr-img-content__left-img">
                {% if block.settings.img_content_img1 != blank %}
                <img src="{{ block.settings.img_content_img1 | image_url: width: 745, height: 804  }}" alt="cwr-img-content-img" class="img-fluid lazyload"
                        width="745" height="804">
                {% endif %}
                </div>
                <div class="cwr-img-content__left-img2">
                    {% if block.settings.img_content_img2 != blank %}
                    <img src="{{ block.settings.img_content_img2 | image_url: width: 228, height: 236 }}" alt="cwr-img-content-img" class="img-fluid lazyload"
                        width="228" height="236">
                    {% endif %}
                        {% if block.settings.img_content_img3 != blank %}
                        <img src="{{ block.settings.img_content_img3 | image_url }}" alt="cwr-img-content-img" class="img-fluid since-year" width="" height="">
                    {% endif %}
                </div>
            </div>
            {%- when 'text_content' -%}
            <div class="row">
                <div class="col-lg-7">
                    <div class="cwr-img-content__right">
                        {% if block.settings.heading_content != blank %}<h2 class="custom-heading-md">{{ block.settings.heading_content }}</h2>{% endif %}
                        {% if block.settings.sub_heading_content != blank %}<h4 class="custom-heading-sm">{{ block.settings.sub_heading_content }}</h4>{% endif %}
                        {% if block.settings.main_content != blank %}{{ block.settings.main_content }}{% endif %}
                        {% if block.settings.button_label != blank or block.settings.button_link != blank %}
                        <a href="{{ block.settings.button_link }}" class="custom-btn">
                            <span>{{ block.settings.button_label }}<svg xmlns="http://www.w3.org/2000/svg" width="18" height="15"
                                    viewBox="0 0 18 15" fill="none">
                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                        d="M11.3429 0.292893L17.7069 6.65685C18.0974 7.04738 18.0974 7.68054 17.7069 8.07107L11.3429 14.435C10.9524 14.8256 10.3192 14.8256 9.92869 14.435C9.53816 14.0445 9.53816 13.4113 9.92869 13.0208L14.5855 8.36396H0.999756C0.447471 8.36396 -0.000244141 7.91625 -0.000244141 7.36396C-0.000244141 6.81168 0.447471 6.36396 0.999756 6.36396H14.5855L9.92869 1.70711C9.53816 1.31658 9.53816 0.683418 9.92869 0.292893C10.3192 -0.0976311 10.9524 -0.0976311 11.3429 0.292893Z"
                                        fill="black" />
                                </svg></span>
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {%- endcase -%}
    {%- endfor -%}
    </div>
</section>

{% schema %}
    {
        "name": "CWR Img-Content",
        "settings": [],
        "blocks" : [
        {
            "type": "image_content",
            "name": "Images Block",
            "settings": [
                {
                "type": "image_picker",
                "label": "Content Image 1",
                "id": "img_content_img1"
                },
                {
                "type": "image_picker",
                "label": "Content Image 2",
                "id": "img_content_img2"
                },
                {
                "type": "image_picker",
                "label": "Content Image 3",
                "id": "img_content_img3"
                }
                ]
        },
        {
            "type": "text_content",
            "name": "Text Content Block",
            "settings": [
                {
                "type": "text",
                "label": "Heading Content",
                "id": "heading_content"
                },
                {
                "type": "text",
                "label": "Sub Heading Content",
                "id": "sub_heading_content"
                },
                {
                "type": "richtext",
                "label": "Main Content",
                "id": "main_content"
                },
                {
                "type": "text",
                "id": "button_label",
                "label": "Button Label",
                },
                {
                "type": "url",
                "id": "button_link",
                "label": "Button Link"
                }
                ]
        }
        ],
        "presets" : [
            {
                "name" : "CWR Img-Content",
                "blocks": [
                    {
                    "type": "image_content"
                    },
                    {
                    "type": "text_content"
                    }
                ]
            }
        ]
    }
{% endschema %}