<style>
section.cwr-review {
    height: fit-content;
}
</style>
<section class="cwr-review">
        <div class="container">
            <div class="sec-heading">
            {% if section.settings.quote_header != blank %}<h2 class="custom-heading-md">{{ section.settings.quote_header }}</h2>{% endif %}
            {% if section.settings.quote_subheader != blank %}<h4 class="custom-heading-sm">{{ section.settings.quote_subheader }}</h4>{% endif %}
            </div>
            <div class="cwr-review__wrap js-cwr-review-slider">
                {% for block in section.blocks %}
                {% if block.settings.quote_text != blank or block.settings.quote_image != blank or block.settings.author_name != blank %}
                <div class="cwr-review__slider">
                    <div class="cwr-rating">
                        <ul>
                            {% for i in (1..5) %}
                            <li><img src="{{ 'rating-star.svg' | file_url }}" alt="star icon" class="img-fluid" width="16" height="16"></li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% if block.settings.quote_text != blank %}{{ block.settings.quote_text }}{% endif %}
                    <div class="cwr-review-img">
                        {% if block.settings.quote_image != blank %}
                        <figure>
                            <img src="{{ block.settings.quote_image | image_url}}" alt="review img" class="img-fluid" />
                        </figure>
                        {% endif %}
                        {% if block.settings.author_name != blank %}
                        <span>{{ block.settings.author_name }}</span>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
</section>
{% schema %}
    {
        "name": "Shopping With Us",
        "settings": [
            {
            "id": "quote_header" , 
            "type": "text",
            "label": "Quote-Heading"
            },
            {
            "id": "quote_subheader" , 
            "type": "text",
            "label": "Quote-Subheading"
            }
        ],
        "blocks": [
            {
            "type": "quote",
            "name": "Testimonial",
            "settings": [
                {
                "type": "image_picker",
                "id": "quote_image",
                "label": "Quote Image"
                },
                {
                "type": "richtext",
                "id": "quote_text",
                "label": "Text"
                },
                {
                "type": "text",
                "id": "author_name",
                "label": "Author Name"
                }
            ]
            }
        ],
        "presets" : [
            {
                "name" : "Shopping With Us"
            }
        ]
    }
{% endschema %}