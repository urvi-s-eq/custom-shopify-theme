<section class="cwr-our-categories">
    <div class="container">
        <div class="sec-heading">
            {% if section.settings.category_heading != blank %}
                <h2 class="custom-heading-md">{{ section.settings.category_heading }}</h2>
            {% endif %}
                        {% if section.settings.category_subheading != blank %}
                <h4 class="custom-heading-sm">{{ section.settings.category_subheading }}</h4>
            {% endif %}
        </div>
        <div class="row">
            {% for block in section.blocks %}
                <div class="col-lg-4 col-6">
                    <a href="{{ block.settings.category_url }}">
                        <div class="img-content">
                            {% if block.settings.category_image != blank %}
                                <div class="img-content__bg">
                                    <img src="{{ block.settings.category_image | img_url: '405x512' }}" alt="{{ block.settings.category_label }}-bg-img" class="img-fluid lazyload" width="405" height="512">
                                </div>
                            {% endif %}
                            {% if block.settings.category_label != blank %}
                                <button class="img-content__btn">{{ block.settings.category_label }}</button>
                            {% endif %}
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Our Categories",
        "settings": [
                {
                "type": "text",
                "label": "Heading for Category",
                "id": "category_heading"
                },
                {
                "type": "text",
                "label": "Subheading for Category",
                "id": "category_subheading"
                }
        ],
        "blocks" : [
        {
            "type": "categories",
            "name": "Our Categories Block",
            "settings": [
                {
                "type": "image_picker",
                "label": "Category Image",
                "id": "category_image"
                },
                {
                "type": "url",
                "label": "Category Url",
                "id": "category_url"
                },
                {
                "type": "text",
                "label": "Category Label",
                "id": "category_label"
                }]
        }
        ],
        "presets" : [
            {
                "name" : "Our Categories"
            }
        ]
    }
{% endschema %}