<section class="cwr-blog">
  <div class="container">
    <div class="sec-heading">
    {% if section.settings.heading_content %}<h2 class="custom-heading-md">{{ section.settings.heading_content }}</h2>{% endif %}
    {% if section.settings.sub_heading_content %}<h4 class="custom-heading-sm">{{ section.settings.sub_heading_content }}</h4>{% endif %}
    </div>
    <div class="cwr-blog__box-wrap js-blog-slider">
      {% assign selected_blog = blogs[section.settings.selected_blog] %}
      {% for article in selected_blog.articles %}
        {% if article %}
          {% include 'cwr-article' with article %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
    {% schema %}
        {
            "name": "CWR-Blog",
            "settings": [
                {
                    "type": "text",
                    "label": "Heading Content",
                    "id": "heading_content"
                    },
                    {
                    "type": "text",
                    "label": "Sub Heading Content",
                    "id": "sub_heading_content"
                    },
                    {
                    "type": "text",
                    "id": "button_label",
                    "label": "Button Label",
                    "default": "Read More"
                    },
                    {
                    "type": "blog",
                    "id": "selected_blog",
                    "label": "Select a Blog"
                    }
            ],
            "presets" : [
                {
                    "name" : "CWR-Blog"
                }
            ]
        }
    {% endschema %}